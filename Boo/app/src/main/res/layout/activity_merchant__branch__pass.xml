<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Merchant_Branch_Pass"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tit"
        android:text="Branch Name"
        android:textSize="27dp"
       android:gravity="center_horizontal"
        android:textColor="#797979"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pas"
        android:text="Branch password"
        android:textSize="22dp"
        android:textColor="#590d7c"
        android:layout_marginTop="50dp"
        android:layout_below="@id/tit"
        android:gravity="center_horizontal"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:textColorHint="#bd590d7c"
        android:inputType="textPassword"
        android:id="@+id/password"
        android:layout_below="@id/pas"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_button"
        android:padding="6dp"
        android:layout_margin="20dp"

        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/toBranchHome"
        android:text="Confirm"
        android:layout_below="@id/password"
        android:background="@drawable/blue_radius"
        android:textColor="@color/white"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
       ></Button>
</RelativeLayout>